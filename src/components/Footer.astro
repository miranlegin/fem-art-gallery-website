---
export interface Props {
  alternate?: boolean;
}

const { alternate = false } = Astro.props;
---

<footer data-bg={`${alternate && 'alternate'}`}>
  <div class="footer-container">
    <svg class="icon icon-logo"
      ><use xlink:href="../symbol-defs.svg#icon-logo"></use>
    </svg>
    <p>
      The Modern Art Gallery is free to all visitors and open seven days a week
      from 8am to 9pm. Find us at 99 King Street, Newport, USA.
    </p>

    <ul class="socials">
      <li>
        <a href="#" aria-label="Facebook">
          <svg class="icon icon-icon-facebook" role="img">
            <title>Facebook icon</title>
            <use xlink:href="../symbol-defs.svg#icon-icon-facebook"></use>
          </svg>
        </a>
      </li>
      <li>
        <a href="#" aria-label="Instagram">
          <svg class="icon icon-icon-instagram" role="img">
            <title>Instagram icon</title>
            <use xlink:href="../symbol-defs.svg#icon-icon-instagram"></use>
          </svg>
        </a>
      </li>
      <li>
        <a href="#" aria-label="Twitter">
          <svg class="icon icon-icon-twitter" role="img">
            <title>Twitter icon</title>
            <use xlink:href="../symbol-defs.svg#icon-icon-twitter"></use>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</footer>
